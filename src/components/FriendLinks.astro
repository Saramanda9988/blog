---
interface FriendLink {
  name: string
  url: string
  avatar: string
  description: string
}

// 示例友链数据
const friendLinks: FriendLink[] = [
  {
    name: 'Hibernator',
    url: 'https://vorest0628.github.io',
    avatar: '/photos/about.png',
    description: '一位兴趣使然，涉猎音游/AI/前端的otaku'
  },
  {
    name: 'PurplePlanen',
    url: 'https://www.purpleplanen.top',
    avatar: '/photos/logo.png',
    description: '紫翼天航-FE链接地'
  },
  {
    name: 'Immortal',
    url: 'https://blog.immortel.top',
    avatar: '/photos/Immortal.jpg',
    description: 'Cherish every moment.'
  }
]
---

<div class="friends-container">
  {friendLinks.map(friend => (
    <a href={friend.url} target="_blank" rel="noopener noreferrer" class="friend-card">
      <div class="flex items-center gap-3">
        <div class="avatar-container">
          <img src={friend.avatar} alt={friend.name} />
        </div>
        <div class="content-container">
          <h3>{friend.name}</h3>
          <p>{friend.description}</p>
        </div>
      </div>
    </a>
  ))}
</div>

<style>
  .friends-container {
    display: grid;
    gap: 1rem;
    margin-top: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  }
  .friend-card {
    background-color: var(--theme-card);
    padding: 1rem;
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    transition: box-shadow 0.3s, transform 0.3s;
    overflow: hidden;
  }
  .friend-card:hover {
    box-shadow: 0 4px 6px rgba(0,0,0,0.1), 0 1px 3px rgba(0,0,0,0.06);
    transform: translateY(-2px);
  }
  .avatar-container {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background: #f3f3f3;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid #fff; /* 新增白色边框，提升头像统一感 */
    box-shadow: 0 0 4px rgba(0,0,0,0.04); /* 柔和阴影 */
  }
  .avatar-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    /* 防止图片有默认的间隙 */
    vertical-align: middle;
  }
  .content-container {
    flex: 1;
    min-width: 0;
  }
  .friend-card h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 600;
    word-break: break-all;
  }
  .friend-card p {
    margin-top: 0.5rem;
    line-height: 1.4;
    word-break: break-all;
  }
</style> 