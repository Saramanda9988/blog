---

<div class="friends-container grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mt-6">
  {friendLinks.map(friend => (
    <a href={friend.url} target="_blank" rel="noopener noreferrer" class="friend-card p-4 border border-gray-200 dark:border-gray-700 rounded-lg hover:shadow-md transition-shadow duration-300">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 rounded-full overflow-hidden">
          <img src={friend.avatar} alt={friend.name} class="w-full h-full object-cover" />
        </div>
        <div>
          <h3 class="text-lg font-medium">{friend.name}</h3>
          <p class="text-sm text-gray-600 dark:text-gray-400">{friend.description}</p>
        </div>
      </div>
    </a>
  ))}
</div>

<style>
  .friend-card {
    background-color: var(--theme-card);
  }
</style> 